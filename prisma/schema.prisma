generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  timezone  String
  events    EventType[]
}

model EventType {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  duration    Int      @default(60)
  unavailable String[] // ["12:00","13:00"]

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  bookings    Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  eventId   String
  event     EventType @relation(fields: [eventId], references: [id])

  name      String
  email     String
  date      DateTime
  time      String
  createdAt DateTime @default(now())
}

model Availability {
  id        String @id @default(uuid())
  day       Int
  startTime String
  endTime   String
}

model DateOverride {
  id        String   @id @default(uuid())
  date      DateTime
  startTime String?
  endTime   String?
  isBlocked Boolean  @default(false)
}
